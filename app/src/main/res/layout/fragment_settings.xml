<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/trm_stateHeader"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/colorAccent">

        <Button
            android:id="@+id/settings_btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="@string/btnSave"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/trm_textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="-120dp"
            android:gravity="center"
            android:text="@string/mitConfig"
            android:textSize="24sp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvwTerrarium1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edtTerrarium1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="@+id/tvwTerrarium1"
            app:layout_constraintTop_toBottomOf="@+id/tvwTerrarium1" />

        <TextView
            android:id="@+id/tvwTerrarium2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/edtTerrarium1"
            app:layout_constraintTop_toBottomOf="@+id/edtTerrarium1" />

        <EditText
            android:id="@+id/edtTerrarium2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/tvwTerrarium2"
            app:layout_constraintTop_toBottomOf="@+id/tvwTerrarium2" />

        <TextView
            android:id="@+id/tvwTerrarium3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/edtTerrarium2"
            app:layout_constraintTop_toBottomOf="@+id/edtTerrarium2" />

        <EditText
            android:id="@+id/edtTerrarium3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/tvwTerrarium3"
            app:layout_constraintTop_toBottomOf="@+id/tvwTerrarium3" />

        <TextView
            android:id="@+id/tvwTerrarium4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/edtTerrarium3"
            app:layout_constraintTop_toBottomOf="@+id/edtTerrarium3" />

        <EditText
            android:id="@+id/edtTerrarium4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/tvwTerrarium4"
            app:layout_constraintTop_toBottomOf="@+id/tvwTerrarium4" />

        <TextView
            android:id="@+id/tvwTerrarium5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/edtTerrarium4"
            app:layout_constraintTop_toBottomOf="@+id/edtTerrarium4" />

        <EditText
            android:id="@+id/edtTerrarium5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/tvwTerrarium5"
            app:layout_constraintTop_toBottomOf="@+id/tvwTerrarium5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>